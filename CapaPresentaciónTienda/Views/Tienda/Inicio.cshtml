
@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/Inicio")

<main>
    <div id="slider">

        <div class="slider-inner">
            <div id="slider-content">
                <div class="meta">Consolas</div>
                <h2 id="slide-title">The Last Of <br>Us II</h2>
                <span data-slide-title="0">The Last Of <br>Us II</span>
                <span data-slide-title="1">Nintendo <br>Switch</span>
                <span data-slide-title="2">Spider <br>Man</span>
                <span data-slide-title="3">Play <br>Station 5</span>
                <div class="meta">Categoria</div>
                <div id="slide-status">Consola</div>
                <span data-slide-status="0">Videojuego</span>
                <span data-slide-status="1">Consola</span>
                <span data-slide-status="2">Videojuego</span>
                <span data-slide-status="3">Consola</span>
            </div>
        </div>


        <img src="~/Content/ImgInicio/thelastofus-removebg-preview.png" />
        <img src="~/Content/ImgInicio/switch-removebg-preview.png" />
        <img src="~/Content/ImgInicio/spiderman-removebg-preview.png" />
        <img src="~/Content/ImgInicio/play5-removebg-preview.png" />


        <div id="pagination">
            <button class="active" data-slide="0"></button>
            <button data-slide="1"></button>
            <button data-slide="2"></button>
            <button data-slide="3"></button>
        </div>

    </div>



</main>

<script src="https://kit.fontawesome.com/2db48d7766.js" crossorigin="anonymous"></script>
<script async src="https://www.googletagmanager.com/gtag/js?id=UA-40525870-5"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r83/three.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/4.1.4/imagesloaded.pkgd.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.4/TweenMax.min.js"></script>



@section scripts {

    <script src="~/Scripts/script.js"></script>
}

