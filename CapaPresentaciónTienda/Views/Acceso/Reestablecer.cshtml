<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Minimalista</title>

    <link rel="stylesheet" href="~/Content/style_reestablecer.css">

</head>
<body>
    <div id="container_main">

        <div id="container_login">
            <form action="@Url.Action("Reestablecer","Acceso")" method="post">

                <h1>Reestablecer</h1>
                <div id="container_grid">
                    <div class="container_email">
                        <input type="text" placeholder="Email" id="correo" name="correo" style="color: black;">

                    </div>

                    <div class="container_a">
                        <a href="@Url.Action("Index","Acceso")">Volver</a>
                    </div>

                    <div class="container_btn">
                        <button type="submit" id="btn">Enviar</button>
                    </div>

                    @{
                        if (ViewBag.Error != null)
                        {
                            <div class="form-floating mb-3">
                                <div id="mensajeError" class="alert alert-danger" role="alert">
                                    @ViewBag.Error
                                </div>
                            </div>
                        }
                    }

                </div>

            </form>


        </div>

    </div>

    <script src="script.js"></script>
     <script src="https://kit.fontawesome.com/2db48d7766.js" crossorigin="anonymous"></script> 
</body>
</html>